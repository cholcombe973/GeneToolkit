package digitalLabManagementSystem;

import javax.swing.UIManager;
import java.awt.Toolkit;
import java.awt.Dimension;


/**
 *
 * <p>Title: GuiApp</p>
 *
 * <p>Description: Called to startup the gui portion of the program.  Used as a convience
 * object.</p>
 *
 * <p>Copyright: Copyright (c) 2004</p>
 *
 *
 * @author Chris Holcombe
 * @version 1.0
 */
public class GuiApp {
  private boolean packFrame = false;

  public GuiApp() {
      //Validate frames that have preset sizes
      //Pack frames that have useful preferred size info, e.g. from their layout
      ReferenceEngine re = new ReferenceEngine();
      GUI frame = new GUI(re);

      if (packFrame)
        frame.pack();
      else
        frame.validate();

      //Center the window
      Dimension screenSize = Toolkit.getDefaultToolkit().getScreenSize();
      Dimension frameSize = frame.getSize();
      if (frameSize.height > screenSize.height) {
        frameSize.height = screenSize.height;
      }
      if (frameSize.width > screenSize.width) {
        frameSize.width = screenSize.width;
      }
      frame.setLocation((screenSize.width - frame.getWidth()),0);
      frame.setVisible(true);
    }
    public static void main(String[] args){
      try {
          //Sun XP look and feel
          UIManager.setLookAndFeel(UIManager.getSystemLookAndFeelClassName());
        }catch(Exception e) {e.printStackTrace();}
        new GuiApp();
      }
    }
